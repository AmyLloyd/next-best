<section id="blogpost-sec">
    <div class="container" style="margin: 5px"></div>
    {{#each blogposts as |blogpost|}}
      <div class="card">
        <button class="button">{{blogpost.title}} by {{user.username}}</button>
        <p>{{blogpost.body}}</p>
      </div>
    {{/each}}
    </div>
</section>

