<nav>
    <a href="/">Home</a>
    <a href="/dashboard">Dashboard</a>
    <!-- Conditionally render login or logout links -->
    {{#if loggedIn}}
    <a href="/login" id="logout">Logout</a>
    {{else}}
    <a href="/login">Login</a>
    {{/if}}
</nav>


<!-- Blogpost cards -->

<section id="blogposts-sec">
  <div class="container" style="margin: 5px"></div>
    {{#each blogposts as |blogpost|}} 
    <div class="card">
      <header class="header">
        <a href=`/blogs/{{blogpost.id}}`>
          <h2>{{blogpost.title}}</h2>
        </a>
        <div class="data-group">    
          <p>Posted by: {{user.username}} on {{format_date date_created}}</p>
          <div data_id="{{blogpost.id}}">
                <button class="button" id="comment-button">Comment</button>
          </div>
        </div>
      </header>
      <p>{{blogpost.body}}</p>
    </div>
    {{/each}}
  </div>
</section>


<div class="comment-form-el">
  <div class="login-card">
      <h2>Add Comment to Blogpost</h2>

      <form class="form comment-form">
        <div class="form-group">
          <label for="comment">Comment:</label>
          <input class="form-input" type="text-area" id="comment" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit" data-id="{{blog.id}}">Submit</button>
        </div>
      </form>
  </div>
</div>

<script src="./js/homepage.js"></script>