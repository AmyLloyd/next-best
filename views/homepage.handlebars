<nav>
    <a href="/">Home</a>
    <a href="/dashboard">Dashboard</a>
    <!-- Conditionally render login or logout links -->
    {{#if loggedIn}}
    <a href="/login" id="logout">Logout</a>
    {{else}}
    <a href="/login">Login</a>
    {{/if}}
</nav>


<!-- Blogpost cards -->

<section id="blogposts-sec">
  <div class="container" style="margin: 5px"></div>
  <div id="blogContainer">
  {{#each blogposts as |blogpost|}}
    <div class="card">
      <header class="header">
          <h2>{{blogpost.title}}</h2>
        <div class="data-group">
          <p>Posted by: {{user.username}} on {{format_date date_created}}</p>
          <div data_id="{{blogpost.id}}">
                <button class="button" id="comment-button">Comment</button>
          </div>
        </div>
      </header>
      <p>{{blogpost.body}}</p>

      <footer>
        <h2>Comments</h2>
        <ul>
      {{#each comments as |comment|}}
        <li>Next Best user #{{comment.user_id}} says "{{comment.comment}}".</li>
      {{/each}}
      </ul>
      </footer>

    </div>

  {{/each}}
</div>
</section>


<div class="comment-form-el">
  <div class="login-card">
      <h2>Add Comment to Blogpost</h2>

      <form class="form comment-form">
        <div class="form-group">
          <label for="comment">Comment:</label>
          <input class="form-input" type="textarea" id="comment" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
      </form>
  </div>
</div>

<script src="./js/homepage.js"></script>